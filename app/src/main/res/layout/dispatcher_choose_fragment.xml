<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Изберете какво желаете :"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp"
        android:layout_margin="70dp"
        android:layout_marginTop="70dp"
        android:gravity="center"/>

    <Button
        android:layout_below="@+id/tvChoose"
        android:id="@+id/btnAccept"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/button_blue_selector"
        android:hint="Приемане на самолетен полет"
        android:textColorHint="@android:color/white"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_below="@+id/btnAccept"
        android:id="@+id/btnSetFlight"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/button_blue_selector"
        android:hint="Създаване на самолетен полет"
        android:textColorHint="@android:color/white"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>